{
    "name": "homeland-email-service",
    "version": "1.0.0",
    "description": "Email queue processor for Homeland",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "pm2:start": "pm2 start index.js --name email-service --log /var/log/email-service.log",
        "pm2:stop": "pm2 stop email-service",
        "pm2:restart": "pm2 restart email-service",
        "pm2:delete": "pm2 delete email-service",
        "pm2:logs": "pm2 logs email-service",
        "pm2:status": "pm2 status email-service",
        "setup": "npm install && npm install -g pm2"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "mysql2": "^3.2.0",
        "nodemailer": "^6.9.1"
    },
    "devDependencies": {
        "pm2": "^5.3.1"
    }
}